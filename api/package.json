{
  "name": "timesheet-api",
  "version": "1.0.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "description": "API for Timesheet",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --coverage --coverageReporters=\"text-summary\"",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "start": "cross-env NODE_ENV=production pm2 ./src/index.js",
    "start:docker": "docker run -d -p 3301:3301 express-4x-api-starter",
    "build": "npx tsc",
    "dev": "cross-env NODE_ENV=development nodemon ./src/index.ts",
    "lint": "eslint -c .eslintrc ./src",
    "lint:fix": "eslint -c .eslintrc ./src --fix",
    "prettier": "prettier --check \"src/**/*.js\"",
    "prettier:write": "prettier --check \"src/**/*.{js,ts}\" --write"
  },
  "author": "thanawat.petchsri@gmail.com",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.44.0",
    "eslint-plugin-prettier": "^4.2.1",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.2.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.22",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/lodash-es": "^4.17.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.28",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "eslint": "^8.44.0",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "clover",
      "json",
      "lcov"
    ]
  }
}
